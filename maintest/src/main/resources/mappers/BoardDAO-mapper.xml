</select>

<!-- 게시글 등록-->

<insert id="insertArticle"  parameterType="com.my.maintest.board.vo.BoardVO">
insert into board(bNum, bCategory, hidCategory, uCode, bTitle, bContent)
values(
bnum_seq.nextVal
, #{bCategory.catNum}
, #{hidCategory.hidNum}
, #{uCode}
, #{bTitle}
, #{bContent}
  )
</insert>

